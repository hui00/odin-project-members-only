<section class="w-full mt-4">
  <div class="container border-2 items-center px-6 mx-auto width-100%">
      <div class="mt-6 lg:mt-0 lg:mx-6 ">
        <%= link_to post.title, post_path(post.id)  , 
          class:"block mt-4 text-2xl font-semibold hover:underline md:text-3xl" %>
        <p class="mt-3 text-sm text-gray-500 md:text-sm line-clamp-2">
          <%= post.body %>
        </p>
        <%= link_to "Edit", edit_post_path(post.id), class:"inline-block mt-2 text-blue-500 underline hover:text-blue-400" %>
        <div class="flex justify-between items-center mt-6">
            <% unless current_user.nil? %>
              <h1 class="text-sm text-gray-700 ">Author: <%= post.user.email  %></h1>
            <% end %>
          <p class="mb-4 text-sm text-gray-500">
 <%= post.created_at.strftime("%d/%m/%Y") %>
  <%= time_ago_in_words(post.created_at) << " ago" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
