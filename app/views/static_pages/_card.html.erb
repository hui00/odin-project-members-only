<section class="flex-1 bg-white w-full dark:bg-gray-900">
  <div class="container border-2 px-6 mx-auto">
    <div class="mt-8 lg:-mx-6 lg:flex lg:items-center">
      <img class="object-cover w-full lg:mx-6 lg:w-1/2 rounded-xl h-72 lg:h-96" src="https://images.unsplash.com/photo-1590283603385-17ffb3a7f29f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"alt="">
      <div class="mt-6 lg:w-1/2 lg:mt-0 lg:mx-6 ">
        <%= link_to post.title, post_path( 1 )  , class:"block mt-4 text-2xl font-semibold text-gray-800 hover:underline dark:text-white md:text-3xl" %>
        <p class="mt-3 text-sm text-gray-500 dark:text-gray-300 md:text-sm">
          <%= post.body %>
        </p>
        <%= link_to "Edit", edit_post_path(post.id), class:"inline-block mt-2 text-blue-500 underline hover:text-blue-400" %>
        <div class="flex justify-between items-center mt-6">
            <% unless current_user.nil? %>
              <h1 class="text-sm text-gray-700 dark:text-gray-200">Author: <%= @Posts[0].user.email  %></h1>
            <% end %>
          <p class="mb-4 text-sm text-gray-500 dark:text-gray-400">
 <%= post.created_at.strftime("%d/%m/%Y") %>
  <%= time_ago_in_words(post.created_at) << " ago" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
